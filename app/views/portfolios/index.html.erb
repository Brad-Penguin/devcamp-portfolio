<h1>Port items </h1>

<%= link_to "Create New Item", new_portfolio_path  %>

<% @portfolio_items.each do |cheese| %>
   <p><%= link_to cheese.title, portfolio_path(:id => cheese.id)%></p>
   <p><%= cheese.subtitle%></p>
   <p><%= cheese.body%></p>
   
    <%=image_tag cheese.thumb_image unless cheese.thumb_image.nil? %>  

    <%= link_to "Edit", edit_portfolio_path(:id => cheese.id)  %>
<%end%>